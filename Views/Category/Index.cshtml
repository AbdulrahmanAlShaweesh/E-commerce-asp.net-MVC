
@model List<EcommerceWebApplicationMVC.Models.Entities.CategoryModel>


 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @{
        ViewData["Title"] = "Index Page";
    }       
</head>
<body>
    
   <div class="row">
        <div class="col-md-9 offset-md-2">
                 <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
     
           @foreach (var category in Model)
        {
            <tr>
                 <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <a class="btn btn-outline-info"> <i class="fas fa-regular fa-pencil me-1"></i> Edit</a>
                    <a class="btn btn-outline-secondary"> <i class="fas fa-regular fa-eye me-1"></i> Details</a>
                    <a class="btn btn-outline-danger"><i class="fas fa-regular fa-trash me-1"></i> Delete</a>
                </td>
            </tr>
             
        }
        </tbody>
    </table>
        </div>
   </div>
</body>
</html>